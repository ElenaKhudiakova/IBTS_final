NoEmptyClusterDecorator::NoEmptyClusterDecorator(IteratorFS* Iterator)
	: Iterator(Iterator)
{

}

// ѕереопределЄнный метод First() от IteratorFS
void exFATIterator::First() {
	IteratorFS::First();

	// ≈сли не удалось прочитать первый кластер, то завершаем работу First()
	if (IteratorFS::IsDone()) {
		return;
	}

	// TODO проверка на сигнатуру


//	// „итаем нулевой кластер
//	if (!FileSystem->ReadCluster(clusterBuffer, 0)) {
//		done = true;
//	}
}

void exFATIterator::Next() {
	IteratorFS::Next();

    // ≈сли не удалось прочитать первый кластер, то завершаем работу First()
	if (IteratorFS::IsDone()) {
		return;
	}
}

