//---------------------------------------------------------------------------
// Директива #ifndef проверяет, был ли ранее определен макрос или символическая константа как #define.
// Если — да, компилятор включает в программу код, который находится между директивами  #else и #endif,
// если nameToken ранее определен не был, то выполняется код между #ifndef и #else, или, если нет директивы #else,
// компилятор сразу переходит к #endif.  Директива #ifndef может быть использована для подключения заголовочных файлов.
// если они не подключены, для этого использовать символическую константу, как индикатор подключенного к проекту функционала.

// Например, в заголовочном файле есть интерфейс класса, который необходимо подключить к проекту,
// если ранее этот класс не был подключен.
#ifndef FactoryFileSystemH
#define FactoryFileSystemH
#include <vcl.h>
#include "AbstractFileSystem.h"
#include "NTFS.h"
#include "exFAT.h"
//---------------------------------------------------------------------------

// Перечисление типов файловых систем
enum FSType {
	NTFS_FS=1,
	exFAT_FS=2
};

// 2. Параметризированный фабричный метод создания ФС
AbstractFileSystem* CreateFileSystem(FSType Type, HANDLE FileHandle);

// 1. Функция определения ФС
FSType FindFileSystemType(HANDLE FileHandle);

#endif
